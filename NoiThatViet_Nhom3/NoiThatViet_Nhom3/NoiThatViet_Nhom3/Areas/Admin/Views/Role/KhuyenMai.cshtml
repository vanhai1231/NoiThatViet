@model NoiThatViet_Nhom3.Models.KhuyenMaiViewModel

@{
    ViewBag.Title = "KhuyenMai";
    Layout = "~/Areas/Admin/Views/Shared/_Layout-admin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tạo Khuyến Mãi</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin khuyến mãi
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("KhuyenMai", "Role", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.TenChuongTrinh)
                        @Html.TextBoxFor(m => m.TenChuongTrinh, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ThoiGianBatDau)
                        @Html.TextBoxFor(m => m.ThoiGianBatDau, new { @class = "form-control", type = "date" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ThoiGianKetThuc)
                        @Html.TextBoxFor(m => m.ThoiGianKetThuc, new { @class = "form-control", type = "date" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.GhiChu)
                        @Html.TextAreaFor(m => m.GhiChu, new { @class = "form-control", rows = "3" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhanTramGiam)
                        @Html.TextBoxFor(m => m.PhanTramGiam, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Chọn tất cả sản phẩm:</label>
                        <br />
                        <label>
                            @Html.CheckBoxFor(m => m.ChonTatCaSanPham)
                        </label>
                    </div>

                    <div class="form-group" id="chonSanPham">
                        <label>Hoặc chọn từng sản phẩm:</label>
                        <br />
                        @for (var i = 0; i < Model.DanhSachSanPham.Count; i++)
                        {
                            <label>
                                @Html.CheckBoxFor(m => m.DanhSachSanPham[i].Selected)
                                @Model.DanhSachSanPham[i].TenSanPham
                                @Html.HiddenFor(m => m.DanhSachSanPham[i].MaSanPham)
                            </label>
                            <br />
                        }
                    </div>
                    <button type="submit" class="btn btn-primary">Tạo Khuyến Mãi</button>
                }
            </div>
        </div>
    </div>
</div>
