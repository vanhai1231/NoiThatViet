@model NoiThatViet_Nhom3.Models.DonHang
@{
    ViewBag.Title = "XoaDonHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout-admin.cshtml";
}

<h2>Xóa Đơn Hàng</h2>

<div>

    <hr />
    <dl class="dl-horizontal" style="margin-left:250px">
        <dt>
            Mã Đơn Hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaDH)
        </dd>

        <dt>
            Tổng Tiền:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TongTien)
        </dd>



        <dt>
            Ngày Lập:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayLap)
        </dd>

        <dt>
            Địa Chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChiGiaoHang)
        </dd>

        <dt>
            Trạng Thái:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrangThaiDH)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="text-align:center">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Quay Về", "DanhSachDonHang")
        </div>
    }
</div>


