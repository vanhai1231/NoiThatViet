                @Html.EditorFor(model => model.ThongTinCaNhan.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ThongTinCaNhan.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ThongTinCaNhan.Sdt, "Số Điện Thoại", htmlAttributes: new { @class = "control-label col-md-2" })
