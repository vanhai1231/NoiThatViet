@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error 404</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #007bff; /* Màu blue */
            color: #ffffff; /* Màu trắng cho văn bản */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .error-container {
            text-align: center;
        }

        h1 {
            font-size: 8rem;
            margin-bottom: 20px;
        }

        h2 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        p {
            font-size: 1.25rem;
            margin-bottom: 30px;
        }

        a {
            display: inline-block;
            background-color: transparent;
            color: #ffffff; /* Màu trắng cho văn bản */
            border: 2px solid #ffffff; /* Viền màu trắng */
            text-decoration: none;
            padding: 12px 24px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

            a:hover {
                background-color: #ffffff; /* Màu nền trắng */
                color: #007bff; /* Màu xanh */
            }
    </style>
</head>
<body>
    <div class="error-container">
        <h1>Error 404</h1>
        <h2>Không tìm thấy trang</h2>
        <p>Vui lòng quay lại trang chủ!</p>
        <a href="/">Trang chủ</a>
    </div>
</body>
</html>
